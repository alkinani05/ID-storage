# Server Environment Variables Template for Railway
# Copy this to .env and fill in the values

# Database - Railway will provide this automatically
DATABASE_URL=postgresql://postgres:password@localhost:5432/wathiqni

# JWT Secret - Generate a secure random string
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Port
PORT=3001

# CORS - Frontend URL (update after deploying frontend)
# For production: Use your actual frontend URL
# For development: Use * to allow all origins (NOT recommended for production)
# Multiple origins: Separate with commas
# Example: CORS_ORIGIN=https://your-frontend.up.railway.app,https://www.yourdomain.com
CORS_ORIGIN=https://your-frontend.up.railway.app

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AI Configuration (Optional - for advanced analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here
