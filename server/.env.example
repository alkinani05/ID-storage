# Server Environment Variables for Local Development
# Copy this to .env and fill in the values

# Database Connection
# When using docker-compose, this is set automatically
# For standalone development: postgresql://dev:your-password@localhost:5432/wathiqati
DATABASE_URL=postgresql://dev:dev@localhost:5432/wathiqati

# JWT Secret - Generate a secure random string
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Port
PORT=3001

# CORS - Frontend URL
# For local development with Docker: http://localhost:3000
# For standalone development: http://localhost:3000,http://localhost:3002
# For production: Use your actual frontend URL
CORS_ORIGIN=http://localhost:3000

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AI Configuration (Optional - for advanced analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here
